<Window x:Class="ImageUniversalViewer.SplashWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageUniversalViewer"
        mc:Ignorable="d"
        Title="Splash" Height="400" Width="597"
        WindowStyle="None"
        ResizeMode="NoResize">
    <Grid>
        <Image Source="images/switch_from_mac_to_pc_apple_logo-100726483-large.jpg" Stretch="Fill"/>
        <TextBlock TextWrapping="Wrap" Text="{Binding Path=Status}" VerticalAlignment="Bottom" Height="30" Foreground="White" FontFamily="Arial" FontSize="18" Padding="7,3,0,0"/>

    </Grid>
</Window>
